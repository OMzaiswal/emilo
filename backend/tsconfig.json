{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Node.js compatibility
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019"],
    "types": ["node"],

    // Debugging & build outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Clean imports
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
